<div class="row">
  <div class="col-lg-3">
    <%= render 'shared/user_info' %>
  </div>
  <div id="newsfeed" class="col-lg-6">
    <% @posts.each do |post| %>
      <div id="activity-3664" class="activity">
        <div id="post-914" class="activity-post">
          <div class="info">
            <%= user_avatar(post.user) %>
            <span class="action"<% link_to post.user.first_name, user_path(post.user) %> created a <a href="/posts/914">post</a></span>
          </div>
          <div class="content">
            <span class="text"><p><%= post.content %></p></span>
              <% if post.picture? %>
                <div class="attachment">
                  <%= image_tag post.picture, width: "100%", height: "300" %>
                </div>
              <% end %>
              <div class="created-at">
                <i class="fa fa-clock-o"></i> 2 days ago
              </div>
              <div class="points">
                <span class="like-count">1 like</span>
                <span class="comments-count">0 comments</span>
                <div class="pull-right">
                  <a class="btn btn-primary btn-sm" href="/posts/914/edit"><i class="fa fa-pencil"></i></a>        
                  <a class="btn btn-danger btn-sm" data-method="delete" data-remote="true" href="/posts/914" rel="nofollow"><i class="fa fa-trash"></i></a>    
                </div>
              </div>
            </div>
            <div class="actions">
              <div class="row">
                <div class="col-xs-6 like">
                  <form accept-charset="UTF-8" action="/unlike?likeable_id=914&amp;likeable_type=Post" data-remote="true" method="post"><div style="display:none"><input name="utf8" type="hidden" value="&#x2713;" /></div><button class="btn btn-block liked" name="button" type="submit">      <i class="fa fa-thumbs-up"></i> unlike</button></form>
                </div>
                <div class="col-xs-6 comment">
                  <a class="btn btn-block" href="/posts/914"><i class="fa fa-comment"></i> comment</a>      
                </div>
              </div>
            </div>
          </div>
      </div>    
    <% end %>
  </div>
  <div class="col-lg-3">
    <%= render 'shared/links' %>
  </div>
</div>